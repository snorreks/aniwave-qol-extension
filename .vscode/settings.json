{
	"editor.formatOnSave": true,
	"editor.codeActionsOnSave": {
		"source.fixAll": true
		// "source.sortImports": true
	},
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"eslint.validate": ["javascript", "typescript"],
	"editor.quickSuggestions": {
		"strings": true
	},
	"css.validate": false,
	"less.validate": false,
	"scss.validate": false,
	"files.associations": {
		"*.css": "postcss"
	},
	"json.schemas": [
		{
			"fileMatch": ["manifest.json"],
			"url": "https://json.schemastore.org/chrome-manifest.json"
		}
	],
	"cSpell.ignorePaths": [
		"package-lock.json",
		"node_modules",
		"vscode-extension",
		".git/objects",
		".vscode",
		".vscode-insiders",
		"pnpm-lock.yaml"
	],
	"cSpell.words": [
		"aniwave",
		"enigo",
		"instream",
		"outstream",
		"snorreks",
		"vidplay"
	]
}
